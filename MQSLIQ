-- Moqleshron Liquid Survey Server v1.0 by Liltine & Eiryna

os.loadAPI("MQSNP")

local network
local monitor
local netside = "right"
local monside = "rear"
local monX, monY
local termX, termY

function Init()
	term.clear()
	print ("Initializing Network Interface...")
	network = peripheral.wrap(netside)
	rednet.open(netside)
	print ("Network Initialized")
	print ("Connecting Monitor...")
	monitor = peripheral.wrap(monside)
	monitor.clear()
	print("Monitor Connected")

	monX, monY = term.getSize()
	parallel.waitForAll(mainLIQ, HndKey, MsgProcessing)
end

function mainLIQ()
	while continue do
		MQSNP.Receive()
	end
end

function HndKey()
	term.setCursor(1, monY)
	term.write("Press X to Exit")
	while continue do
		local event, param = os.pullEvent("key")
		if event == "key" then
			if param ==  45 then
				continue = false
				return
			end
		end
	end
end

function MsgProcessing()
	local tmp
	while continue do
		tmp = MQSNP.getMessage()
		if not (tmp == nil) then
			if tmp["canal"] == "SRV_LIQ" then
				-- Va savoir Charles!
				print(tmp["msg"])
			end
		end
	end
end